#include<stdio.h>
struct student
{
	char name[20];
	int age;
	int mark;
};
void main()
{
	int i;	
	struct student s[4];
	for(i=1;i<4;i++)
	{
		printf("\n------ENTER %d STUDENT DETAILS---",i);
		scanf("%s",s[i].name);
		scanf("%d",&s[i].mark);	
		scanf("%d",&s[i].age);	
	}
		for(i=1;i<4;i++)
	{
		printf("\n------ STUDENT DETAILS---");
		printf("%d. %s marks is %d and age is %d",i,s[i].name,s[i].mark,s[i].age);
		printf("\n");
}}
